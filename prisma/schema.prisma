datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  email          String           @unique
  name           String
  password       String
  nick           String?
  trainings      Training[]
  savedTrainings SavedTrainings[]
}

model Training {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  exercises Exercise[]
  User      User?      @relation(fields: [userId], references: [id])
  userId    String?    @db.ObjectId
  comment   String?
}

model SavedTrainings {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  exercises   Exercise[]
  User        User?      @relation(fields: [userId], references: [id])
  userId      String?    @db.ObjectId
  description String?
}

model Exercise {
  id                  String          @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  numberOfSeries      Int
  numberOfReplication Int
  weight              Float
  comment             String?
  Training            Training?       @relation(fields: [trainingId], references: [id])
  trainingId          String?         @db.ObjectId
  SavedTrainings      SavedTrainings? @relation(fields: [savedTrainingsId], references: [id])
  savedTrainingsId    String?         @db.ObjectId
}

model SavedExercise {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  numberOfSeries      Int
  numberOfReplication Int
  weight              Float
}

model UserWeight {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  weight Float
  date   DateTime
}
